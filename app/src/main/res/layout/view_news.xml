<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_news_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_biti"
    app:cardElevation="@dimen/margin_biti">

    <RelativeLayout
        android:id="@+id/view_news_rel_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_news_image"
            android:layout_width="@dimen/newsImage"
            android:layout_height="@dimen/newsImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />



        <RelativeLayout
            android:id="@+id/view_news_rel_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_news_image"
            android:layout_alignTop="@+id/view_news_image"
            android:layout_toRightOf="@+id/view_news_image"
            android:gravity="center">

            <TextView
                android:id="@+id/view_news_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bit"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_bit"
                android:lines="1"
                android:text="@string/action_settings"
                android:textSize="@dimen/txt_size_largest" />

            <TextView
                android:id="@+id/view_news_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_news_tv_title"
                android:layout_marginBottom="@dimen/margin_bit"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_bit"
                android:lines="1"
                android:text="@string/action_settings"
                android:textSize="@dimen/txt_size_large" />

            <LinearLayout
                android:id="@+id/view_news_lin_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_one"
                android:layout_below="@+id/view_news_tv_description"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_medium"
                android:background="@color/gray"
                android:orientation="horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_news_lin_line"
                android:layout_marginBottom="@dimen/margin_bit"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_bit">

                <ImageView
                    android:id="@+id/view_news_img_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/view_news_tv_date"
                    android:src="@drawable/ic_date" />

                <ImageView
                    android:id="@+id/view_news_img_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pen" />

                <TextView
                    android:id="@+id/view_news_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view_news_img_author"
                    android:layout_alignTop="@+id/view_news_img_author"
                    android:layout_toRightOf="@+id/view_news_img_author"
                    android:gravity="center"
                    android:text="@string/action_settings"
                    android:textSize="@dimen/txt_size_medium" />

                <TextView
                    android:id="@+id/view_news_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view_news_img_author"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/view_news_img_author"
                    android:gravity="center"
                    android:maxLength="10"
                    android:textSize="@dimen/txt_size_medium" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>